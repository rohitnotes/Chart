<?xml version="1.0" encoding="utf-8"?>
<me.wcy.chartsample.pulltorefresh.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.wcy.chartsample.pulltorefresh.PullableScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <me.wcy.chart.view.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="10dp"
                app:gcTouchable="true"
                app:lcCurvedLine="false"
                app:lcGradientShadow="false"
                app:lcShowShadow="true" />

            <me.wcy.chart.view.LineChart
                android:id="@+id/line_chart2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="10dp"
                app:gcTouchable="true"
                app:lcCurvedLine="true"
                app:lcGradientShadow="true"
                app:lcShowShadow="true" />

            <me.wcy.chart.view.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="10dp"
                app:gcTouchable="true" />
        </LinearLayout>
    </me.wcy.chartsample.pulltorefresh.PullableScrollView>
</me.wcy.chartsample.pulltorefresh.PullToRefreshLayout>